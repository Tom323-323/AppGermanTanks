<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWitheMain"
    tools:context=".presenter.screens.RootFragment">

    <ImageView
        android:id="@+id/img_root_main"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/splash_screen_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_root_tanks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Танки"
        app:layout_constraintEnd_toEndOf="@+id/img_root_main"
        app:layout_constraintStart_toStartOf="@+id/img_root_main"
        app:layout_constraintTop_toBottomOf="@+id/img_root_main" />

    <Button
        android:id="@+id/btn_root_sau_mortar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="САУ"
        app:layout_constraintEnd_toEndOf="@+id/bt_root_tanks"
        app:layout_constraintStart_toStartOf="@+id/bt_root_tanks"
        app:layout_constraintTop_toBottomOf="@+id/bt_root_tanks" />

    <Button
        android:id="@+id/btn_root_btr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Бронетранспортеры"
        app:layout_constraintEnd_toEndOf="@+id/btn_root_sau_mortar"
        app:layout_constraintStart_toStartOf="@+id/btn_root_sau_mortar"
        app:layout_constraintTop_toBottomOf="@+id/btn_root_sau_mortar" />

    <Button
        android:id="@+id/btn_root_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="ТЕСТЫ"
        app:layout_constraintEnd_toEndOf="@+id/btn_root_btr"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/btn_root_btr"
        app:layout_constraintTop_toBottomOf="@+id/btn_root_btr" />

    <Button
        android:id="@+id/btn_root_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:text="ИНФО"
        app:layout_constraintEnd_toEndOf="@+id/btn_root_test"
        app:layout_constraintStart_toStartOf="@+id/btn_root_test"
        app:layout_constraintTop_toBottomOf="@+id/btn_root_test" />
</androidx.constraintlayout.widget.ConstraintLayout>